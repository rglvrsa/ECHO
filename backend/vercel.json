{
  "buildCommand": "echo 'Backend ready'",
  "outputDirectory": "./",
  "functions": {
    "api/**/*.js": {
      "maxDuration": 60,
      "memory": 1024
    }
  },
  "routes": [
    {
      "src": "/socket.io/(.*)",
      "dest": "/api/socket-io-polling?path=$1",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS", "HEAD"]
    },
    {
      "src": "/socket.io",
      "dest": "/api/socket-io-polling",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS", "HEAD"]
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS", "HEAD"]
    },
    {
      "src": "/health",
      "dest": "/api/health"
    },
    {
      "src": "/.*",
      "dest": "/api/index"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS, HEAD, PATCH"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Origin, Content-Type, Accept, Authorization, X-Requested-With, X-Socket-ID"
        },
        {
          "key": "Access-Control-Expose-Headers",
          "value": "Content-Type, X-Socket-ID"
        },
        {
          "key": "Access-Control-Max-Age",
          "value": "86400"
        },
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}
